# ==============================================
# Docker Development Environment Configuration
# ==============================================
# Copy this file to .env and update with your actual values

# -----------------
# Database (Docker)
# -----------------
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/realestate"
# For Docker internal networking (if running app in Docker):
# DATABASE_URL="postgresql://postgres:postgres@postgres:5432/realestate"

# -----------------
# Redis (Docker)
# -----------------
REDIS_URL="redis://localhost:6379"
# For Docker internal networking:
# REDIS_URL="redis://redis:6379"

# -----------------
# Application
# -----------------
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:3000"

# -----------------
# JWT Authentication
# -----------------
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="7d"

# -----------------
# SMS Provider (Eskiz - Uzbekistan)
# -----------------
ESKIZ_API_URL="https://notify.eskiz.uz/api"
ESKIZ_EMAIL="your-email@example.com"
ESKIZ_PASSWORD="your-eskiz-password"

# -----------------
# Email (MailHog for Development)
# -----------------
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@realestate.local"
# MailHog Web UI: http://localhost:8025

# For Production (use actual SMTP):
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"

# -----------------
# File Uploads
# -----------------
MAX_FILE_SIZE="10485760"  # 10MB in bytes
UPLOAD_DIR="./uploads"

# -----------------
# CORS
# -----------------
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# -----------------
# Logging
# -----------------
LOG_LEVEL="debug"

# -----------------
# Rate Limiting
# -----------------
RATE_LIMIT_TTL="60"
RATE_LIMIT_MAX="100"
